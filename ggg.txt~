 *\t\tMenu toggler\n\
 */\n\
\n\
function hidden_menu(button) {\n\
//\talert();\n\
\tvar button_menu = document.querySelectorAll('.menu.contacts');\n\
\tvar content = button.parentNode.querySelector('.menu.contacts');\n\
\tfor (var i = 0; i < button_menu.length; i++ ) {\n\
\t\tif (!button_menu[i].classList.contains(\"close\")) {\n\
\t\t\tbutton_menu[i].classList.add(\"close\");\n\
\t\t}\n\
\t}\n\
\tcontent.classList.remove('close');\n\
}\n\
