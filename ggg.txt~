"/*\n\
 *\t\theader hidden\n\
 */\n\
\n\
var body = document.body;\n\
var header = document.querySelector(\"header\");\n\
var header_container = document.querySelector(\".header_container\");\n\
var nav = document.querySelector(\"nav\");\n\
var header_container_height = header_container.clientHeight;\n\
\n\
\n\
body.style.paddingTop = header.clientHeight + \"px\";\n\
window.addEventListener(\"scroll\", function(e) {\n\
\tif (nav.getBoundingClientRect().top <= 20) {\n\
\t\theader_container.classList.add(\"hidden\");\n\
\t\theader.classList.add(\"fixed\");\n\
\t}\n\
\tif (window.pageYOffset < header_container_height) {\n\
\t\theader_container.classList.remove(\"hidden\");\n\
\t\theader.classList.remove(\"fixed\");\n\
\t}\n\
});\n\
